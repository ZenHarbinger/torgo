<project>
    <shortName>Torgo</shortName>
    <fullName>Torgo</fullName>
    <version>1.4.2</version>
    <logoImage>src/main/resources/torgo-48x48.png</logoImage>
    <splashImage>src/main/resources/org/tros/images/splash.png</splashImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment></comment>
                    <exec></exec>
                    <icon></icon>
                    <name>${product_fullname}</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\torgo.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}\torgo.exe</windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Torgo Jar</description>
                    <destination>${installdir}</destination>
                    <name>distfile</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>target/torgo-${product_version}.jar</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Torgo Icon</description>
                    <destination>${installdir}</destination>
                    <name>iconfile</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>src/main/resources/torgo-128x128.ico</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Torgo Dependencies</description>
                    <destination>${installdir}</destination>
                    <name>libfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>target/lib</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Uninstaller</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>windows</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon>${installdir}\torgo.exe</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Torgo Launcher</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>torgo.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Torgo Logo Interpreter</comment>
                    <name>${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\torgo.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <postInstallationActionList>
        <associateWindowsFileExtension>
            <extensions>.dynamic-logo</extensions>
            <friendlyName>Torgo Dynamic Logo File</friendlyName>
            <icon>${installdir}\torgo-128x128.ico</icon>
            <mimeType>text/x-dynamic-logo</mimeType>
            <progID>torgo.dynamic-logo.1</progID>
            <commandList>
                <!-- Defining the 'Open' command -->
                <command>
                    <makeDefault>0</makeDefault>
                    <runProgram>${installdir}\torgo.exe</runProgram>
                    <runProgramArguments>"%1"</runProgramArguments>
                    <verb>Open</verb>
                </command>
            </commandList>
        </associateWindowsFileExtension>
        <associateWindowsFileExtension>
            <extensions>.lexical-logo</extensions>
            <friendlyName>Torgo Lexical Logo File</friendlyName>
            <icon>${installdir}\torgo-128x128.ico</icon>
            <mimeType>text/x-lexical-logo</mimeType>
            <progID>torgo.lexical-logo.1</progID>
            <commandList>
                <!-- Defining the 'Open' command -->
                <command>
                    <makeDefault>0</makeDefault>
                    <runProgram>${installdir}\torgo.exe</runProgram>
                    <runProgramArguments>"%1"</runProgramArguments>
                    <verb>Open</verb>
                </command>
            </commandList>
        </associateWindowsFileExtension>
    </postInstallationActionList>
    <postUninstallationActionList>
        <removeWindowsFileAssociation>
            <extensions>.lexical-logo</extensions>
            <mimeType>text/x-lexical-logo</mimeType>
            <progID>trogo.lexical-logo.1</progID>
        </removeWindowsFileAssociation>
        <removeWindowsFileAssociation>
            <extensions>.dynamic-logo</extensions>
            <mimeType>text/x-dynamic-logo</mimeType>
            <progID>trogo.dynamic-logo.1</progID>
        </removeWindowsFileAssociation>
    </postUninstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <vendor>Matthew Aguirre</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>
